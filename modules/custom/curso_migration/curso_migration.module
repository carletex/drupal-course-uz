function legacy_to_nid_load($lid) {
  $result = db_select('migrate_map_entradasblog', 'mme')
    ->fields('mme', array('destid1'))
    ->condition('sourceid1', $lid, '=')
    ->execute()
    ->fetchField(0);

  if ($result) {
    return 'node/' . $result;
  }
  return FALSE;
}